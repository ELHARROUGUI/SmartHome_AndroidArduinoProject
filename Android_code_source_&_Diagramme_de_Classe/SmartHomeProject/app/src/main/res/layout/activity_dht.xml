<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dht"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg4"
    tools:context="ilisi.smarthomeproject.DHTActivity">

    <Button
        android:text="Actualiser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnActualiser" />

    <Button
        android:text="Quitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnRetRooms" />

    <TextView
        android:text="wait..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCapteur"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/btnActualiser" />

    <TextView
        android:text="Etat du Capteur:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="14sp"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/weather"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtTemp"
        android:layout_marginStart="13dp"
        android:layout_above="@+id/txtTemp" />

    <TextView
        android:text="XY.TS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHumid"
        android:textSize="56sp"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/btnActualiser"
        android:layout_alignStart="@+id/txtTemp"
        android:textColor="@android:color/holo_blue_bright" />

    <TextView
        android:text="XY.TS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTemp"
        android:textSize="56sp"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="12dp"
        android:layout_above="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:text="Tempéarature en ° Celcius:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textStyle="normal|bold"
        android:layout_above="@+id/txtTemp"
        android:layout_alignEnd="@+id/txtCapteur" />

    <TextView
        android:text="Pourcentage de l'humidité:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textStyle="normal|bold"
        android:layout_above="@+id/txtHumid"
        android:layout_alignEnd="@+id/textView5"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
